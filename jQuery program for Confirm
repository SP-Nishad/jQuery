<style>
.fa-trash{
    cursor: pointer;
}
</style>
<script>
$(document).ready(function(){
$(".fa-trash").click(function(){
var tt=confirm("Do you Really want to delete this item?")
if(tt=true)
{
$(this).closest('tr').remove();
}
else
{

}
})
})
</script>
</head>
