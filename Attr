<html>
    <head>
<script src="js/jquery-3.3.1.min.js"></script>
<script>
$(document).ready(function(){
$("input[type='text']").attr("placeholder","Please Enter name").attr("readonly",true);
$("input[value='Go']").click(function(){
$("input[type='text']").attr("placeholder","Please Enter name").attr("readonly",false);
})
})
</script>
    </head>
<body>
Enter Text:
<input type="text">
<input type="button" value="Go">
</body>
</html>
